.row-offcanvas.row-offcanvas-left
  = render 'sidebar'
  %button.btn.btn-primary.btn-sm.sidebar_btn{"data-toggle" => "offcanvas", :type => "button"}
    %i.glyphicon.glyphicon-chevron-left Settings 
  %h3.text-center Edit Page Here
  #main
    = render 'header'
    %h1.text-center.highlighted
      = best_in_place @page, :title, as: :input
    %h3.text-center.highlighted
      = best_in_place @page, :description, as: :textarea, :ok_button => 'Save', :cancel_button => 'Cancel'
    = render 'posts'